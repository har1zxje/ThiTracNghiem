<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="10dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/question4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Câu hỏi 1: What is the capital of France?"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option4_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A. Paris"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option4_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B. London"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option4_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C. Berlin"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option4_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D. Rome"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kết quả: Đúng A"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>